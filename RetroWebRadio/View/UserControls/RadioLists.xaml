<UserControl x:Class="RetroWebRadio.View.UserControls.RadioLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetroWebRadio.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <DataGrid x:Name="datagridRadioList" ItemsSource="{Binding StationList}"  MouseDoubleClick="DataGrid_MouseDoubleClick" SelectedItem="{Binding CurrentStation, Mode=TwoWay}" >
            <DataGrid.Background>

                <ImageBrush ImageSource="/Images/canstock26763900.jpg" Stretch="UniformToFill"/>

               
            </DataGrid.Background>
        </DataGrid>
    
    </Grid>
</UserControl>
